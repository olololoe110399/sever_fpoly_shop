{{>sidebar}}
<div class="main-panel">
    {{>  nav}}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                            <h3 class="card-title ">Update information Cusomter</h3>
                        </div>
                        <div class="card-body">
                            {{> messages}}
                            <form action="" method="POST" enctype="multipart/form-data">
                                <div class=" card-profile mt-5 mb-3 ">
                                    <div class="card-avatar">
                                        <img class="image" src="/img/{{customer.image_path}}" /></div>
                                </div>
                                <label for="customer-img"><b>Chose new customer image</b></label><br>

                                <input type="file" name="image" id="customer-img" class="form-group">
                                <div class="form-group ">
                                    <label for="username" class="bmd-label-floating">User Name</label>

                                    <input type="username" class="form-control" id="username"
                                        value="{{customer.username}}" name="username" disabled>

                                </div>
                                <div class="form-group mt-3 ">
                                    <label for="full_name" class="bmd-label-floating">Full Name</label>
                                    <input type="text" class="form-control" id="full_name"
                                        value="{{customer.full_name}}" name="full_name" required>
                                </div>

                                <div class="form-group">
                                    <input type="date" class="form-control" id="date" value="{{customer.date}}"
                                        name="date" required>
                                </div>
                                <div class="form-group ">
                                    <label for="address" class="bmd-label-floating">Address</label>

                                    <input type="text" class="form-control" id="address" value="{{customer.address}}"
                                        name="address" required>

                                </div>
                                <div class="form-group ">
                                    <label for="phone" class="bmd-label-floating">Phone</label>
                                    <input type="number" class="form-control" id="phone" value="{{customer.phone}}"
                                        name="phone" required>
                                </div>
                                <div>
                                    <div class="col-sm">
                                        <button type="submit" class="btn btn-success float-right">Submit</button>
                                        <a href="customers" class="btn btn-danger float-right">Cancel</a>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>