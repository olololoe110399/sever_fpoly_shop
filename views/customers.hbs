{{>sidebar}}
<div class="main-panel">
    {{>  nav}}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                            <h4 class="card-title ">Customers</h4>
                            <p class="card-category"> Here is a information Customer</p>
                            <a href="customer-add" class="btn btn-sm btn-success">Create</a>
                        </div>
                        <div class="card-body">
                            {{>messages}}
                            {{#if customers}}
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-info">
                                        <th>
                                            Username
                                        </th>
                                        <th>
                                            Full Name
                                        </th>
                                        <th>
                                            Birth
                                        </th>
                                        <th>
                                            Address
                                        </th>
                                        <th>
                                            Phone
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Change
                                        </th>
                                    </thead>
                                    <tbody id="myTable">
                                        {{#each customers}}
                                        <tr>
                                            <td>
                                                {{username}}
                                            </td>
                                            <td>
                                                {{full_name}}
                                            </td>
                                            <td>
                                                {{date}}
                                            </td>
                                            <td>
                                                {{address}}
                                            </td>
                                            <td>
                                                {{phone}}
                                            </td>
                                            <td>
                                                <a href="javascript:;">
                                                    <img class="rounded-circle" width="100" height="100"
                                                        src="/img/{{image_path}}" />
                                                </a>
                                            </td>
                                            <td>
                                                <a href="customer-edit-{{_id}}"
                                                    class="btn btn-sm btn-info edit">Edit</a>
                                                <button class="btn btn-sm btn-danger delete-customer"
                                                    value="{{_id}}" data-toggle="modal"
                                                    data-target="#confirm-delete">Delete</button>
                                            </td>
                                        </tr>

                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>

                            {{else}}
                            <p class="text-center">No players found. Go <a href="customer-add">here</a> to add
                                players.
                            </p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{>modal}}
        </div>
    </div>
    {{> footer}}
</div>